<h1>Portfolio Items</h1>

<a href="portfolio/new">Create new item</a>

<%= link_to "Create new item", new_portfolio_path, %>
<% @portfolio_items.each do |portfolio_items| %>
  <p><%= link_to portfolio_items.title, portfolio_path(portfolio_item.id) %></p>
  <p><%= portfolio_items.subtitle %></p>
  <p><%= portfolio_items.body %></p>
  <%= image_tag portfolio_items.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %>
<% end %>